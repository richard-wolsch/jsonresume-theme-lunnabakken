if helper.validArray(resume.education)
  div(class='education margin-container-4 no-break')
    p(class='section-title no-alone-1')=`${(resume.trans && resume.trans.education) ? resume.trans.education : 'Education'}`
    div(class='container')
      each edu in resume.education
        div(class='article margin-container-2 no-break')
          div(class='title markdown')!=helper.mdToHtml(helper.beautifyArray(', ', [edu.area, edu.studyType]))
          span(class='institution margin-text-2')
            a(href=edu.url)=edu.institution
            if edu.startDate
              | ,
              |
              span(class='date')
                span=helper.calcDate(edu.startDate)
                if edu.endDate && (edu.endDate !== edu.startDate)
                  |
                  | â€“
                  |
                  span=helper.calcDate(edu.endDate)
            if edu.score
              | ,
              |
              span=`${resume.trans.score ? resume.trans.score : 'Score'}: ${edu.score}`
            if helper.validArray(edu.courses)
              ul
                each course in edu.courses
                  li
                    span(class='course')=course

