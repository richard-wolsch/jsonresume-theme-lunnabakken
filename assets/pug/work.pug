if helper.validArray(resume.work)
  div(class='work margin-container-4')
    p(class='section-title no-alone-2')=`${(resume.trans && resume.trans.work) ? resume.trans.work : 'Experience'}`
    div(class='container')
      each work in resume.work
        div(class='article margin-container-3 no-break')
          div(class='header no-alone-1')
            div(class='table')
              div(class='left')
                span(class='title')=work.name
                span(class='subtitle margin-text-1')
                  a(href=work.url)=work.position
                  if work.name && work.location
                    | #{' · '}
                  | #{work.location}
              div(class='right')
                if work.startDate
                  span(class='date')=helper.calcDate(work.startDate)
                  if work.endDate && (work.endDate !== work.startDate)
                    span(class='date')=` – ${helper.calcDate(work.endDate)}`
          div(class='summary markdown margin-text-4')!=helper.mdToHtml(work.summary)
          if helper.validArray(work.highlights)
            ul(class='highlights margin-text-4 no-break')
              each highlight in work.highlights
                li
                  span(class='highlight')=highlight
